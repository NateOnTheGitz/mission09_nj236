@{ ViewData["Title"] = "Bookstore Home";
}

@model List<Book>

<h2>Books Galore!</h2>
@foreach (Book b in Model)
            {
                <h3>@b.Title</h3>
                <ul>
                    <li>by @b.Author</li>
                </ul>
                <br />
            }

